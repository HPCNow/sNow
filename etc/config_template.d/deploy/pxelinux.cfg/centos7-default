#append initrd=kickstart/centos-7.0/initrd.img ip=dhcp inst.ks=http://192.168.7.1/centos-7.0.cfg inst.repo=nfs:192.168.7.1:/sNow/OS/CentOS/7.0/CentOS-7-x86_64-DVD-1503-01.iso console=ttyS0 inst.text
#append initrd=kickstart/centos-7.0/initrd.img ip=dhcp inst.ks=nfs:192.168.7.1:/sNow/OS/deploy/kickstart/centos-7.0.cfg inst.repo=nfs:192.168.7.1:/sNow/OS/CentOS/7.0/CentOS-7-x86_64-DVD-1503-01.iso console=ttyS0 inst.text
#append initrd=kickstart/centos-7.0/initrd.img nomodeset ksdevice=bootif ip=dhcp inst.ks=nfs:192.168.7.1:/sNow/OS/deploy/kickstart/centos-7.0.cfg 
