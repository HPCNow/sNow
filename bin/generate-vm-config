#!/bin/bash
SNOWPATH=$(dirname "$0")
CONFIG_FILE=$SNOWPATH/../etc/snow.conf
SNOW_DOMAINS=$SNOWPATH/../etc/active-domains.conf
echo "/etc/exports in the CFS / NFS server"
echo "++++++++++++++++++++++++++++++++++++"
cat $SNOW_DOMAINS | grep -v ^# | cut -d= -f1 | gawk '{if ($1 !~ /snow/){print "/sNow/"$1"\t snow01(rw,sync,no_subtree_check) snow02(rw,sync,no_subtree_check) " $1"(rw,sync,no_subtree_check)"}}'
