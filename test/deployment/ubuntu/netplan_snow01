      interfaces: [ enp5s0f1 ]
      dhcp4: no
      addresses:
        - 10.250.0.2/24
      gateway4: 10.250.0.1
      nameservers:
        search: [hpcnow.com, in.hpcnow.com]
        addresses: [10.250.0.1, 8.8.8.8]
    xsnow0:
      interfaces: [ enp5s0f0 ]
      dhcp4: no
      addresses:
        - 10.1.0.1/16
        - 10.0.0.1/16
